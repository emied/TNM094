extends ../layout

include ../bike-dashboard/mixins

block content


  +sidenav
  +topnav('1')
  .container-fluid.px-4
    .row
      .container-fluid.col-xs-12.col-sm-12.col-md-12.col-lg-12.p-2.m-0.justify-content-center    
        div(class="compressor-id-box")
          .row
            .container-fluid.col-xs-12.col-sm-12.col-md-12.col-lg-6.d-flex.justify-content-center
              div(id="compressor-id")
          .row.justify-content-center
            h4 Averages:
          .row
            .container-fluid.col-xs-12.col-sm-6.col-md-2.col-lg-2
              div(id="avg-flow",style='background-color: grey')
            .container-fluid.col-xs-12.col-sm-6.col-md-2.col-lg-2
              div(id="avg-oil-temp",style='background-color: grey')
            .container-fluid.col-xs-12.col-sm-6.col-md-2.col-lg-2
              div(id="avg-vibration",style='background-color: grey')
            .container-fluid.col-xs-12.col-sm-6.col-md-2.col-lg-2
              div(id="avg-humidity",style='background-color: grey')
            .container-fluid.col-xs-12.col-sm-6.col-md-2.col-lg-2.d-flex.justify-content-center
              div(id="avg-oil-pressure",style='background-color: grey')
            .container-fluid.col-xs-12.col-sm-6.col-md-2.col-lg-2.d-flex.justify-content-center
              div(id="avg-amb-temp",style='background-color: grey')
        .container-fluid.col-xs-12.col-sm-12.col-md-12.col-lg-12.p-2
          +range-chart-card('line-chart-temp', 'Oil Temp', 'range-chart-oil-temp')
      
          
        
          
  script(src='javascripts/startup-data-request-compressor-id.js', type='module')
  script(src='javascripts/sidenav.js')
