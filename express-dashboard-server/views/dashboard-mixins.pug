mixin chart-card(chart_id, title)
	.chart-card.card-shadow.container-fluid.col-12.m-0.p-0.h-100
		nav.navbar.navbar-chart.p-1
			a.navbar-brand.mx-2(href='#') #{title}
			.dropdown
				a#settings.chart-settings-btn.fas.fa-cog.my-0.mx-2.p-1(data-toggle='dropdown', style="color: rgba(70,70,70,0.8)")
				.dropdown-menu.dropdown-menu-right(aria-labelledby='settings')
					if block
						block
					else
						a.dropdown-item(href='#') No settings provided
		div(id=chart_id).col-12.p-2